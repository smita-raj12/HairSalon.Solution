@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

@foreach (Client c in Model)
{
  <h4>@Html.ActionLink($"{c.Name}", "Details", new { id = c.ClientId }) <br> Appointment with: @c.Stylist.Name</h4>
}
<h4>@Html.ActionLink("Add new Client", "Create")</h4>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
@{
  Layout = "_Layout";
}
