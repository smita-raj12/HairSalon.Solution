@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

@foreach (Client c in Model)
{
  <li>@Html.ActionLink($"{c.Name}", "Details", new { id = c.ClientId })</li>
}
<p>@Html.ActionLink("Add new Client", "Create")</p>
<p>@Html.ActionLink("Delete Client", "Delete", new { id = Model.ClientId })</p>