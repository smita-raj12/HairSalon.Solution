@model HairSalon.Models.Client

<h3>Add a new client</h3>
@using (Html.BeginForm())
{
  <div class="container">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "text", required = "required" })
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description, new { @class = "text", type = "text", required = "required" })
    
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <input type="submit"  value="Add new client" />
  </div>
}
<h4>@Html.ActionLink("Show all client", "Index")</h4>

@{
  Layout = "_Layout";
}
