@using HairSalon.Models;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

@foreach(Stylist s in Model)
{
  <h5>@Html.ActionLink($"{s.Name}", "Details", new { id = s.StylistId })</h5>
}

<h4>@Html.ActionLink("Add new stylist", "Create")</h4>
<p>@Html.ActionLink("Home", "Index", "Home")</p>

@{
  Layout = "_Layout";
}
