@model HairSalon.Models.Stylist

<h4>Add a new stylist</h4>
@using (Html.BeginForm())
{
  <div class="container">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "text", type = "text", required = "required" })
    <input type="submit" value="Add new stylist" />
  </div>
}

<p>@Html.ActionLink("Show all stylists", "Index")</p>

@{
  Layout = "_Layout";
}
